<!DOCTYPE html>
<html>
<head>
  <title>VinoBeats</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
<script type="text/javascript" src="//code.jquery.com/jquery-2.1.4.min.js"></script>

</head>
<body>
	<nav id="mainNav" class="navbar navbar-default">
		<div class="container-fluid">
			
			<!-- Header with the links in the navbar -->
			<div class="navbar-header">
				<%= link_to "Wines", root_path, class:"navbar-brand" %>
			</div>
			
			<ul class="nav navbar-nav">
				<li><%= link_to "Search", searches_path %></li>
			</ul>
			
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				
				<!-- If signed in Show add wines and signout features -->
				<% if current_user %>
				<ul class="nav navbar-nav">
					<li><%= link_to "Add Wines", new_user_wine_path(current_user) %></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li><%= link_to "Signout", logout_path, method: :delete %></li>
				</ul>	
				<% else %>
				
				<!-- If not logged in all the navbar shows is the link to login -->
				<ul class="nav navbar-nav navbar-right">
					<li><%= link_to "Login", login_path %></li>
				</ul>
				<% end %>	
				
			</div>
		</div>
	</nav>

	  <div class="main container">
    <% flash.each do |key, value| %>
      <% if key == "notice" %>
        <%= content_tag :div, value, class: "text-center alert alert-warning" %>
      <% elsif key == "alert" %>
        <%= content_tag :div, value, class: "text-center alert alert-danger" %>
      <% else %>
        <%= content_tag :div, value, class: "text-center alert alert-success" %>
      <% end %>
    <% end %>


<%= yield %>

</body>
</html>
