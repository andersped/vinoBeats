<h1>Wines</h1>
	<div class="container">
		<div class="style-profile-info">
			
			<!-- Table that displays all the wines -->
			<table class="table table-striped table-hover">

				<!-- Header with the name of each value from the Schema -->
				<thead>
					<tr>
						<td>Wine Name</td>
						<td>Varietal</td>
						<td>Vintage</td>
						<td>Winery</td>
					</tr>
				</thead>
				
				<!-- Loop through the database and display each -->
				<tbody>
					<tr>
						<% @wines.each do |wine| %>
						<td><%= link_to "#{wine.name}", wine_path(wine) %></td>
						<td><%= wine.varietal %></td>
						<td><%= wine.vintage %></td>
						<td><%= wine.winery %></td>
						<td><%= link_to "Delete", wine_path(wine), method: :delete, data:{alert:"Are you sure?"}, class:"btn btn-danger" %></td>
					</tr>
					<% end %>
				</tbody>
			
			</table>
		
		</div>
	</div>
