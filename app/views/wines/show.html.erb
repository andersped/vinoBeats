<h1><%= "#{@wine.name}" %></h1>

<div>
	<p>Name: <%= @wine.name %></p>
	<p>Varietal: <%= @wine.varietal %></p>
	<p>Vintage: <%= @wine.vintage %></p>
	<p>Winery: <%= @wine.winery %></p>
	<p><img src="<%= @wine.label %>" alt=""></p>
</div>

<div class="row">
	<div>
		<%= link_to "Edit #{@wine.name}", edit_wine_path(@wine), class:"btn btn-default" %>
		<%= link_to "Delete #{@wine.name}", wine_path(@wine), method: :delete, data:{alert:"Are you sure?"}, class:"btn btn-primary" %>
	</div>
</div>